<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cns_lsp"

    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="10dp"
    android:background="@drawable/border_item_nhan_vien"
    app:layoutDescription="@xml/custom_list_thanh_vien_scene">


    <TextView
        android:id="@+id/tvSoDienThoai"
        android:layout_width="110dp"
        android:layout_height="17dp"
        android:layout_marginStart="12dp"
        android:text=""
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_title5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.445" />

    <TextView
        android:id="@+id/tvDiemThuong"
        android:layout_width="87dp"
        android:layout_height="17dp"
        android:layout_marginStart="12dp"
        android:text=""
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_title4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.819" />

    <TextView
        android:id="@+id/tv_title5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="32dp"
        android:fontFamily="@font/inter_extra_blod"
        android:text="@string/tv_so_dien_thoai"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/imgLogoApp"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_title4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="60dp"
        android:fontFamily="@font/inter_extra_blod"
        android:text="@string/tv_diem_thuong"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/imgLogoApp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="6dp"
        android:fontFamily="@font/inter_extra_blod"
        android:text="@string/tv_ten"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/imgLogoApp"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvTenThanhVien"
        android:layout_width="87dp"
        android:layout_height="17dp"
        android:layout_marginStart="12dp"
        android:text=""
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.096" />

    <ImageView
        android:id="@+id/imSua"
        android:layout_width="58dp"
        android:layout_height="55dp"
        android:layout_marginEnd="52dp"
        android:translationX="100dp"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.511"
        app:srcCompat="@drawable/icon_edit" />

    <ImageView
        android:id="@+id/imXoa"
        android:layout_width="34dp"
        android:alpha="0"
        android:layout_height="33dp"
        android:layout_marginEnd="20dp"
        android:translationX="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.419"
        app:srcCompat="@drawable/icon_delete" />

    <ImageView
        android:id="@+id/imgLogoApp"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_color" />

</androidx.constraintlayout.motion.widget.MotionLayout>
