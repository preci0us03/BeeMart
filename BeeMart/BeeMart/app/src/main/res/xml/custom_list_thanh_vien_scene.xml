<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/imSua"
               motion:framePosition="100"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@+id/imSua"
               motion:framePosition="100"
               android:translationX="0dp" />
           <KeyAttribute
               motion:motionTarget="@+id/imXoa"
               motion:framePosition="100"
               android:translationX="0dp" />
           <KeyAttribute
               motion:motionTarget="@+id/imXoa"
               motion:framePosition="100"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@+id/imgLogoApp"
               motion:framePosition="100"
               android:alpha="0.5" />

           <KeyAttribute
               motion:motionTarget="@+id/imgLogoApp"
               motion:framePosition="100"
               android:translationX="-100dp" />
           <KeyAttribute
               motion:motionTarget="@+id/tvSoDienThoai"
               motion:framePosition="100"
               android:translationX="30dp" />
           <KeyAttribute
               motion:motionTarget="@+id/tv_title4"
               motion:framePosition="100"
               android:translationX="-56dp" />
           <KeyAttribute
               motion:motionTarget="@+id/tv_title"
               motion:framePosition="100"
               android:translationX="-56dp" />
           <KeyAttribute
               motion:motionTarget="@+id/tv_title5"
               motion:framePosition="100"
               android:translationX="-56dp" />
           //
           <KeyAttribute
               motion:motionTarget="@+id/tvSoDienThoai"
               motion:framePosition="100"
               android:translationX="-56dp" />
           <KeyAttribute
               motion:motionTarget="@+id/tvDiemThuong"
               motion:framePosition="100"
               android:translationX="-56dp" />
           <KeyAttribute
               motion:motionTarget="@+id/tvTenThanhVien"
               motion:framePosition="100"
               android:translationX="-56dp" />
       </KeyFrameSet>
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorSide="left" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
</MotionScene>