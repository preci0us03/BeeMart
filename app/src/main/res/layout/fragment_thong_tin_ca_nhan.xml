<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    tools:context=".Fragment.FragmentThongTinCaNhan">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAvatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/avatar"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="15dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tenKhachHang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ten_khach_hang"
                    android:fontFamily="@font/inter_extra_blod"
                    android:textSize="24dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/diaChi2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dia_chi_1"
                    android:layout_marginTop="5dp"
                    android:textSize="20dp"
                    android:textColor="#837676"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:padding="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/userNameKH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/username_kh"
                    android:fontFamily="@font/inter_extra_blod"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/edUserNameKH"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/username_kh"
                    android:textSize="13dp"
                    android:textColor="#837676"
                    android:layout_marginLeft="70dp"/>

                <ImageView
                    android:id="@+id/imSua"
                    android:layout_width="51dp"
                    android:layout_height="51dp"
                    android:layout_marginLeft="4dp"
                    android:src="@drawable/icon_edit" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@color/black"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:padding="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/emailKH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:fontFamily="@font/inter_extra_blod"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/edEmailKH"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:textSize="13dp"
                    android:textColor="#837676"
                    android:layout_marginLeft="105dp"/>

                <ImageView
                    android:id="@+id/imSua1"
                    android:layout_width="51dp"
                    android:layout_height="51dp"
                    android:layout_marginLeft="4dp"
                    android:src="@drawable/icon_edit" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:padding="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sdtKH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/so_dien_thoai"
                    android:fontFamily="@font/inter_extra_blod"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/edSDTKH"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/so_dien_thoai"
                    android:textSize="13dp"
                    android:textColor="#837676"
                    android:layout_marginLeft="52dp"/>

                <ImageView
                    android:id="@+id/imSua2"
                    android:layout_width="51dp"
                    android:layout_height="51dp"
                    android:layout_marginLeft="4dp"
                    android:src="@drawable/icon_edit" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:padding="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/diaChiKH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dia_chi_2"
                    android:fontFamily="@font/inter_extra_blod"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/edDiaChiKH"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/dia_chi_2"
                    android:textSize="13dp"
                    android:textColor="#837676"
                    android:layout_marginLeft="98dp"/>

                <ImageView
                    android:id="@+id/imSua3"
                    android:layout_width="51dp"
                    android:layout_height="51dp"
                    android:layout_marginLeft="4dp"
                    android:src="@drawable/icon_edit" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/diemThuongKH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/diem_thuong"
                    android:fontFamily="@font/inter_extra_blod"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/edDiemThuongKH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/diem_thuong"
                    android:textSize="14dp"
                    android:textColor="#837676"
                    android:layout_marginLeft="145dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>